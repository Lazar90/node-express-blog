<%- include('../partials/header') %>

<div class="container-fluid px-4">
    <h1 class="mt-4">Blogs</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Blogs</li>
    </ol>
    <%- include('../../partials/messages') %> 

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Blogs
        </div>

        <div class="card-body">

            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>image</th>
                        <th>Body</th>
                        <th>Created At</th>
                        <th>Updated At</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>image</th>
                        <th>Body</th>
                        <th>Created At</th>
                        <th>Updated At</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    <% blogs.forEach(blog => { %>
                        <tr>
                            <td><%= blog.id %></td>
                            <td><%= blog.title %></td>
                            <td><img src="<%= blog.image %>" width="100" alt=""></td>
                            <td width="20%"><%= blog.body.substr(0, 50) %></td>
                            <td><%= blog.createdAt.toDateString() %></td>
                            <td><%= blog.updatedAt.toDateString() %></td>
                            <td class="d-flex">
                                <a href="/admin/blog/edit/<%= blog.slug %>" class="btn btn-warning btn-sm me-2">Edit</a>
                                <form action="/admin/blog/delete/<%= blog.slug %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
</main>
<%- include('../partials/footer') %>
